<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Imagen -->
    <style name="imagen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Titulo -->
    <style name="titulo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/thumbnail</item>
        <item name="android:layout_marginBottom">70dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">3</item>
        <item name="android:padding">8dp</item>
        <item name="android:text">Pregunta</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Pregunta -->
    <style name="pregunta">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/title</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:maxLines">3</item>
        <item name="android:padding">8dp</item>
        <item name="android:text">@string/pregunta1</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    
    
    <!-- Radio Buttons -->
    <style name="radio_buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- Checkboxes -->
    <style name="chechboxes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Edit Text -->
    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">70dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:hint">@string/respuesta_hint</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- Button Next -->
    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:onClick">siguiente</item>
        <item name="android:text">@string/button_next</item>
    </style>

</resources>
